<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMS</title>
    <link rel="stylesheet" href="~/libs/std/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/themes/dashforge/css/dashforge.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="" class="aside-logo"><img src="~/app/imgs/logo-text.png" alt=""></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                </div>
            </div>
            <div class="navbar-right">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Expense Management System
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Today.Year - Tata Consulting Engineers - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/libs/std/jquery/dist/jquery.min.js"></script>
    <script src="~/libs/std/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/themes/dashforge/js/dashforge.js" asp-append-version="true"></script>
    <script src="~/libs/std/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/libs/std/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/libs/std/jquery-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
