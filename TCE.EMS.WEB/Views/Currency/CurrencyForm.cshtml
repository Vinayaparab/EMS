@model TCE.EMS.Services.Models.CurrencySC


@{
    ViewData["Title"] = "Currency Master";
}

@section Scripts{
    <script src="~/app/js/CurrencyForm.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui-dist/jquery-ui.min.js"></script>

}

<div class="content-body">
    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                        <li class="breadcrumb-item"><a href="#">Master</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Currency</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="card-header pd-y-20 d-md-flex align-items-center justify-content-between">
                <div class="col-12">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <h4 class="mg-b-0">Currency Master</h4>
                    </div>
                </div><!-- col -->
            </div>
            <div class="card-body">
                <div class="container-fluid">
                    <form id="frmCurrency" method="post" data-ajax-url="@Url.Content("~/")Currency/Save"
                        enctype="multipart/form-data" data-ajax="true" data-ajax-method="post"
                        data-ajax-begin="CurrencyFormObj.OnFormSubStart"
                        data-ajax-complete="CurrencyFormObj.OnFormSubCompleted">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div id="divValidErrors" class="xform-errors text-danger margin-large-bottom">
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 control-label">Currency Code <span style="color:red">*</span></label>
                            <div class="col-md-5">
                                <input type="text" class="form-control form-control-line"
                                    placeholder="Enter Master Text" id="txtCmpName" asp-for="@Model.CurrCode"
                                    autocomplete="off">
                                <span asp-validation-for="@Model.CurrCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label class="col-md-3 control-label">Currency Name <span style="color:red">*</span></label>
                            <div class="col-md-5">
                                <input type="text" class="form-control form-control-line"
                                    placeholder="Enter Master Value" id="txtCmpName" asp-for="@Model.CurrName"
                                    autocomplete="off">
                                <span asp-validation-for="@Model.CurrName" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="@Model.DocId">
                        <hr class="mt-0" />
                        <div class="mb-3 row">
                            <div class="col-md-12">                           
                                <div class="xform-actions text-center">
                                    <button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>
                                    <button id="btnExit" class="btn btn-secondary" onclick="CurrencyFormObj.ExitPage()"
                                        type="cancel">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- card-body -->
        </div>
    </div>
</div>
